<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

<p><strong>or sign in using :</strong></p>  
<a href="/auth/twitter" class="auth_provider">  
  <%= image_tag "twitter_32.png", :size => "32x32", :alt => "Twitter" %>Twitter</a>  
<a href="/auth/facebook" class="auth_provider">  
  <%= image_tag "facebook_32.png", :size => "32x32",  :alt => "Facebook" %>Facebook</a>  
<a href="/auth/linkedin" class="auth_provider">  
  <%= image_tag "linkedin_32.png", :size => "32x32", :alt => "linkedin" %>linkedin</a>    
<div class="clear"></div>  

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
